<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context=".page_yuechu.phb1Activity">


    <LinearLayout
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3F51B5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical|center"
            android:background="@android:color/holo_blue_dark"
            android:text="约厨"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/camera" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            //这里添加你的组件

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="190dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:text="     小当家"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/phb1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="267dp"
                    android:layout_weight="1"
                    android:text='主人公刘昴星年仅13岁，却极具厨艺天分，拥有的超人的味觉和想象力，谨记母亲的指导以及一颗永不言败的心，在各种烹饪比赛和各方的挑战中不断成长，成为最年轻的"特级厨师"，并与邪恶的"黑暗料理界"开始了对抗。'
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/Bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_index"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="首页" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="搜索" />

        <ImageButton
            android:id="@+id/imagebtn_camera"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/camera1" />

        <Button
            android:id="@+id/btn_date"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="#FFFFFF"
            android:text="约厨" />

        <Button
            android:id="@+id/btn_mine"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="我的" />
    </LinearLayout>

</LinearLayout>